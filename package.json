{
  "name": "diff0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "deploy:convex": "cd packages/backend && pnpm dlx convex deploy",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @diff0/backend dev",
    "dev:setup": "turbo -F @diff0/backend dev:setup"
  },
  "dependencies": {
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.2.4",
    "ultracite": "5.4.5"
  },
  "packageManager": "pnpm@10.15.0"
}
